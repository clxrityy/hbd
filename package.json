{
  "name": "hbd",
  "version": "1.3.0",
  "description": "A Discord birthday bot",
  "main": "index.js",
  "scripts": {
    "start": "ts-node src/index.ts",
    "start:dev": "ts-node-dev src/index.ts",
    "start:prod": "node dist/index.js",
    "dev": "nodemon ./src/index.ts",
    "test": "ts-node ./src/test/index.ts",
    "build": "tsc",
    "watch": "tsc -w",
    "run:deploy": "pnpm build && pm2 start dist/index.js --name hbd",
    "run:restart": "pm2 restart hbd",
    "run:stop": "pm2 stop hbd"
  },
  "keywords": [
    "mongodb",
    "mongoose",
    "typescript",
    "discord.js",
    "openai",
    "ai",
    "express",
    "interval",
    "automation",
    "bot",
    "birthday",
    "horoscope"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/clxrityy/hbd"
  },
  "bugs": {
    "url": "https://github.com/clxrityy/hbd/issues"
  },
  "homepage": "https://github.com/clxrityy/hbd/wiki",
  "author": {
    "name": "MJ Anglin",
    "url": "https://www.mjanglin.com",
    "email": "contact@mjanglin.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.12.8",
    "ts-node": "^10.9.2",
    "tslib": "^2.6.2",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@changesets/cli": "^2.27.1",
    "colors": "^1.4.0",
    "discord.js": "^14.14.1",
    "dotenv": "^16.4.5",
    "mongoose": "^8.3.3",
    "nodemon": "^3.1.0",
    "openai": "^4.41.0"
  }
}
