{
  "name": "hbd",
  "version": "1.3.0",
  "description": "A Discord birthday bot",
  "main": "index.js",
  "scripts": {
    "start": "ts-node src/index.ts",
    "start:dev": "ts-node-dev src/index.ts",
    "start:prod": "node dist/index.js",
    "dev": "nodemon ./src/index.ts",
    "test": "ts-node ./src/test/index.ts",
    "build": "tsc",
    "watch": "tsc -w",
    "run:deploy": "export NODE_ENV=production && pnpm build && pm2 start dist/index.js --name hbd",
    "run:restart": "export NODE_ENV=production && pnpm build && pm2 restart hbd",
    "run:stop": "pm2 stop hbd",
    "run:delete": "pm2 delete hbd",
    "logs": "pm2 logs hbd --lines 750",
    "changeset": "npx changeset"
  },
  "keywords": [
    "mongodb",
    "mongoose",
    "typescript",
    "discord.js",
    "openai",
    "ai",
    "express",
    "interval",
    "automation",
    "bot",
    "birthday",
    "horoscope"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/clxrityy/hbd"
  },
  "bugs": {
    "url": "https://github.com/clxrityy/hbd/issues"
  },
  "homepage": "https://github.com/clxrityy/hbd/wiki",
  "author": {
    "name": "MJ Anglin",
    "url": "https://www.mjanglin.com",
    "email": "contact@mjanglin.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/cookie-parser": "^1.4.7",
    "@types/crypto-js": "^4.2.2",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.0",
    "@types/node": "^20.12.12",
    "ts-node": "^10.9.2",
    "tslib": "^2.6.2",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@changesets/cli": "^2.27.3",
    "axios": "^1.7.2",
    "colors": "^1.4.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "discord.js": "^14.15.2",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-session": "^1.18.0",
    "mongoose": "^8.4.0",
    "nodemon": "^3.1.1",
    "openai": "^4.47.1"
  }
}
